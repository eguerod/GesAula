<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane fx:id="view" prefHeight="500.0" prefWidth="700.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17">
   <top>
      <ToolBar BorderPane.alignment="CENTER">
        <items>
          <Button mnemonicParsing="false" onAction="#onNuevoGrupoAction" text="Nuevo" />
            <TextField fx:id="ficheroText" promptText="Nombre del fichero" />
            <Button defaultButton="true" mnemonicParsing="false" onAction="#onGuardarGrupoAction" text="Guardar" />
        </items>
      </ToolBar>
   </top>
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" side="LEFT" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab fx:id="grupoTab" text="Grupo" />
          <Tab fx:id="alumnosTab" text="Alumnos" />
        </tabs>
      </TabPane>
   </center>
   <padding>
      <Insets top="5.0" />
   </padding>
</BorderPane>
